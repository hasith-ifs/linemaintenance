client LineMaintenance;
component LNMNT;
layer Core;
projection LineMaintenance;
target AurenaNative;

--------------------------------- FRAGMENTS ---------------------------------

----------------------------- NAVIGATOR ENTRIES -----------------------------

navigator {
   entry LmmAppNavEntry  parent FndmobNavigator.AurenaNativeApps at index 1 {
      label = "Dashboard";
      page Dashboard;
   }

}

-------------------------------- MAIN PAGES ---------------------------------

page Dashboard {
   label = "Dashboard";
   command AircraftListCommand;
   command FlightListCommand;
}

page AircraftListPage using AircraftSet {
   label = "Aircrafts";
   list AircraftsList {
      details = AircraftDetailViewPage(AircraftId);
   }
}
singleton AircraftSingleton for Aircraft;
page AircraftDetailViewPage using AircraftSet {
   label = "Aircraft Detail";
   singleton AircraftSingleton;
   group AircraftDetailList;

}

--------------------------------- COMMANDS ----------------------------------
command AircraftListCommand {
   label = "Aircrafts";
   execute {
      if [true] {
         navigate AircraftListPage;
      }
   }
}
command FlightListCommand {
   label = "Flights";
   icon = "geomap-alt";

}

--------------------------------- SELECTORS ---------------------------------


---------------------------------- GROUPS -----------------------------------
group AircraftDetailList for Aircraft {

   field RegistrationCode;
   field LineNumber;
   field VariableNumber;
   field FinNumber;
   field Manufacturer;
   field PartNumber;
   field SerialNumber;
}

----------------------------------- LISTS -----------------------------------

list AircraftsList for Aircraft {
   label = "Aircrafts";
   card AircraftsListCard;
}

card AircraftsListCard for Aircraft {

   label = "${RegistrationCode}";
   field LineNumber;
   field VariableNumber;
   field FinNumber;
   field Manufacturer;
   field PartNumber;
   field SerialNumber;
}

